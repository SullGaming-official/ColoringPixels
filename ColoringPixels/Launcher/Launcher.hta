<html>
<head>
  <title>SullGaming ColoringPixels Launcher</title>
  <hta:application
    applicationname="SQCPLauncher"
    border="thin"
    caption="yes"
    showintaskbar="yes"
    singleinstance="yes"
    windowstate="normal"
  />
  <style>
       html, body {
      margin: 0;
      padding: 0;
      height: 100%;
      overflow: hidden;
      font-family: sans-serif;
      background: #f0f0f0;
    }
  </style>
</head>
<body>
  <h1>Choose a Version</h1>
  <div id="versionList"></div>
  <script>
    var fso = new ActiveXObject("Scripting.FileSystemObject");
    var shell = new ActiveXObject("WScript.Shell");
    var launcherFolder = fso.GetParentFolderName(window.location.pathname);
    var versionsFolder = fso.BuildPath(launcherFolder, "..\\Versions");
    var files = fso.GetFolder(fso.GetAbsolutePathName(versionsFolder)).Files;
    var listDiv = document.getElementById("versionList");
    var e = new Enumerator(files);
    for (; !e.atEnd(); e.moveNext()) {
      var file = e.item();
      var name = file.Name;
      if (fso.GetExtensionName(name).toLowerCase() == "vbs") {
        var displayName = name;
if (name.toLowerCase() == "game_v1.vbs") {
  displayName = "ColoringPixels";
}
if (name.toLowerCase() == "game_v2.vbs") {
  displayName = "PixelDrawGame/ColoringPixels first version";
}
        var btn = document.createElement("button");
        btn.innerText = displayName;
        btn.onclick = (function(path) {
          return function() {
            shell.Run("wscript.exe \"" + path + "\"");
            window.close();
          };
        })(file.Path);
        listDiv.appendChild(btn);
      }
    }
  </script>
</body>
</html>